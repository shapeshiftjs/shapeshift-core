{
  "name": "@shapeshift/core",
  "version": "0.1.0",
  "description": "Vue.js JSON Schema based form component",
  "main": "dist/shapeshift.cjs.js",
  "module": "dist/shapeshift.es.js",
  "browser": "dist/shapeshift.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coveralls":
      "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shapeshiftjs/shapeshift-core.git"
  },
  "author": "Bailey Hu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shapeshiftjs/shapeshift-core/issues"
  },
  "homepage": "https://github.com/shapeshiftjs/shapeshift-core#readme",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/json-schema": "^6.0.0",
    "coveralls": "^3.0.0",
    "jest": "^22.0.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.1",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.9.0",
    "ts-jest": "^22.0.0",
    "typescript": "^2.6.2"
  },
  "files": ["dist"],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "roots": ["src"],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "mapCoverage": true
  }
}
